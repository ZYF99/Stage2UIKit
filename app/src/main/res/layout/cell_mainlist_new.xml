<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bg_gradual_cell_main">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_height="17dp"
                    android:src="@drawable/tip_new"
                    android:paddingTop="3dp"
                    android:id="@+id/im_tip_new"
                    android:layout_weight="0"
                    android:scaleType="centerCrop"/>
            <TextView
                    android:text="仕事内容タイトル "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/text_tip"
                    android:id="@+id/tv_job_name"
                    android:layout_weight="0" android:textStyle="bold"/>
            <TextView
                    android:text="仕事内容本文本文本文本文本文本文本文本文本文本 …"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/text_tip"
                    android:id="@+id/tv_job_content"
            />
        </LinearLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:id="@+id/frame_brief"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp" android:layout_marginEnd="12dp">

            <TextView
                    android:text="★★★★★"
                    android:textColor="@color/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sdf"
                    android:textAlignment="center"
                    android:lineSpacingExtra="2dp"
                    android:textSize="14sp"
            />
            <TextView
                    android:text="　　 　    　   テスト拠点名（最大項目）（必須項目）最大50文字 改行します。（株式会社ジャーナルネット（全項目））"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingRight="4dp"
                    android:id="@+id/tv_brief"
                    android:lineSpacingExtra="8sp"
                    android:textSize="12sp"/>
        </FrameLayout>
        <LinearLayout
                android:id="@+id/lin_type"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/frame_brief"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp">
            <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/icn_job_part"
                    android:id="@+id/cell_type"
                    android:layout_marginTop="6dp"/>
            <TextView
                    android:text="キャッチコピー（必須項目）最大50文字。アイウエオカキクケコさしすせそたちつてとなにぬねのはひふへ終"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/tv_adtext"
                    android:textColor="@color/text_first"
                    android:textSize="16sp"
                    android:maxLines="10"
                    android:singleLine="false"
                    android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/lin_type" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp" android:layout_marginTop="15dp" android:gravity="center_vertical"
                android:id="@+id/lin_workstation">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_weight="0">
                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            app:srcCompat="@drawable/icn_typeofjob_detail"
                            android:id="@+id/dsfgv"
                            android:layout_weight="0"/>
                    <TextView
                            android:text="IT・エンジニア系（システ …"
                            android:singleLine="true"
                            android:textColor="@color/text_first"
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/textView4" android:layout_weight="0"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:layout_weight="0">
                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp" app:srcCompat="@drawable/icn_typeofjob_detail"
                            android:id="@+id/dsf" android:layout_weight="0"/>
                    <TextView
                            android:text="時給1000円"
                            android:singleLine="true"
                            android:textColor="@color/text_first"
                            android:layout_marginLeft="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textVdfsgiew4" android:layout_weight="0"
                            android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:gravity="center_vertical"
                        android:layout_weight="0">
                    <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp" app:srcCompat="@drawable/icn_typeofjob_detail"
                            android:id="@+id/imageView2" android:layout_weight="0"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:layout_weight="0">
                        <TextView
                                android:text="京都府京都市北区 その他 …"
                                android:singleLine="true"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/text_first"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dasd" android:layout_weight="0"/>
                        <TextView
                                android:text="最寄駅：京都、九条（京都 …"
                                android:singleLine="true"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/text_first"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/dasd2" android:layout_weight="0"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                    android:layout_width="8dp"
                    android:rotation="-90"
                    android:layout_height="13dp" app:srcCompat="@drawable/icn_chevron_down_gay"
                    android:id="@+id/worksta_btn_next2" android:layout_weight="0"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lin_endtime"
                app:layout_constraintTop_toBottomOf="@id/lin_workstation"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:paddingBottom="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="12dp"
                android:gravity="center_vertical">


            <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp" app:srcCompat="@drawable/icn_hourglass"
                    android:id="@+id/imageView" android:layout_weight="0"/>
            <TextView
                    android:text="掲載終了まであと"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/tv_endtime_txt"
                    android:layout_weight="0"
                    android:textColor="@color/text_first"
                    android:textSize="12sp"/>
            <TextView
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_endtime_number"
                    android:layout_weight="0"
                    android:textSize="12sp" android:textColor="@android:color/holo_red_dark"/>
            <TextView
                    android:text="日"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tv_endtime_ri" android:layout_weight="1"
                    android:textColor="@color/text_first" android:textSize="12sp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="0"
                    android:background="@drawable/bg_btn_keep_rect_still"
                    android:id="@+id/btn_keep">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/icn_keep_border_yellow"
                        android:id="@+id/imageView4" android:layout_weight="1"/>
                <TextView
                        android:text="キープする"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/textView3" android:layout_weight="1"
                        android:textColor="@color/text_first"/>
            </LinearLayout>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gang"
                app:layout_constraintTop_toBottomOf="@id/lin_endtime"
                android:id="@+id/gang" app:layout_constraintBottom_toTopOf="@+id/lin_photography"
                android:layout_marginBottom="6dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:layout_constraintTop_toBottomOf="@+id/gang"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="horizontal"
                android:id="@+id/lin_photography"
                android:layout_marginBottom="0dp">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icn_chevron_circle_left"
                    android:id="@+id/btn_photography_last"
                    android:layout_weight="0"/>
            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_weight="1"
                    android:id="@+id/viewpager_photography">
            </androidx.viewpager.widget.ViewPager>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/icn_chevron_circle_right"
                    android:id="@+id/btn_photography_next"
                    android:layout_weight="0"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>